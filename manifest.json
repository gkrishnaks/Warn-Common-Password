{

  "description": "Shows a warning notification if you enter a password in any Password field that matches any in 1 million common passwords. Works entirely offline.",
  "manifest_version": 2,
  "name": "Warn Common Password",
  "version": "0.0.1",
  "homepage_url": "https://github.com/gkrishnaks/",
  "icons": {
    "48": "icons/lockIcon.png"
  },
  "applications": {
    "gecko": {
      "id": "gokulakrishna.k.s@gmail.com",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "notifications"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]

}